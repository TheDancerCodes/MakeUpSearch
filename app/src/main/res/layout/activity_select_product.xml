<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moyinoluwa.makeupsearch.presentation.select_product.SelectProductActivity">

    <LinearLayout
        android:id="@+id/activity_select_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_search_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/welcome_message"
            android:textSize="@dimen/welcome_message_text_size"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:gravity="center">

            <Button
                android:id="@+id/button_blush"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:onClick="selectButtonClick"
                android:text="@string/blush"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75"
                />

            <Button
                android:id="@+id/button_bronzer"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectButtonClick"
                android:text="@string/bronzer"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_eyeliner"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintRight_creator="1"/>

            <Button
                android:id="@+id/button_eyebrow"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectButtonClick"
                android:text="@string/eyebrow"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_blush"
                app:layout_constraintLeft_toLeftOf="@+id/button_mascara"
                app:layout_constraintRight_toLeftOf="@+id/button_mascara"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"/>

            <Button
                android:id="@+id/button_eyeliner"
                style="@style/ProductButtonStyle"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:onClick="selectButtonClick"
                android:text="@string/eyeliner"
                app:layout_constraintBottom_toBottomOf="@+id/button_eyebrow"
                app:layout_constraintLeft_toRightOf="@+id/button_eyebrow"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"/>

            <Button
                android:id="@+id/button_eyeshadow"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:onClick="selectButtonClick"
                android:text="@string/eyeshadow"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_foundation"
                app:layout_constraintRight_toLeftOf="@+id/button_foundation"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintRight_creator="1"/>

            <Button
                android:id="@+id/button_foundation"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="61dp"
                android:onClick="selectButtonClick"
                android:text="@string/foundation"
                app:layout_constraintBottom_toTopOf="@+id/button_mascara"
                app:layout_constraintLeft_toLeftOf="@+id/button_mascara"
                app:layout_constraintRight_toRightOf="@+id/button_mascara"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"/>

            <Button
                android:id="@+id/button_lip_liner"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:onClick="selectButtonClick"
                android:text="@string/lip_liner"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_foundation"
                app:layout_constraintLeft_toRightOf="@+id/button_foundation"/>

            <Button
                android:id="@+id/button_lipstick"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:onClick="selectButtonClick"
                android:text="@string/lipstick"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_mascara"
                app:layout_constraintRight_toLeftOf="@+id/button_mascara"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintRight_creator="1"/>

            <Button
                android:id="@+id/button_mascara"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:onClick="selectButtonClick"
                android:text="@string/mascara"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_eyebrow"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"/>

            <Button
                android:id="@+id/button_nail_polish"
                style="@style/ProductButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectButtonClick"
                android:text="@string/nail_polish"
                app:layout_constraintBaseline_toBaselineOf="@+id/button_mascara"
                app:layout_constraintLeft_toRightOf="@+id/button_eyeliner"
                app:layout_constraintRight_toRightOf="@+id/button_eyeliner"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</ScrollView>